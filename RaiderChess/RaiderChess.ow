variables
{
	player:
		0: playerFacingDir
}

rule("Game Setup")
{
	event
	{
		Ongoing - Global;
	}
}

rule("King Spawn In (Player)")
{
	event
	{
		Ongoing - Each Player;
		All;
		All;
	}

	conditions
	{
		Is Alive(Event Player) == True;
		Is Dummy Bot(Event Player) == False;
		Has Spawned(Event Player) == True;
	}

	actions
	{
		Set Gravity(Event Player, 0);
		Wait(0.250, Ignore Condition);
		If(Compare(Team Of(Event Player), ==, Team 1));
			Teleport(Event Player, Vector(-25.000, 10, 0));
			Set Player Variable(Event Player, playerFacingDir, Left);
		Else;
			Teleport(Event Player, Vector(25, 10, 0));
			Set Player Variable(Event Player, playerFacingDir, Right);
		End;
		Set Facing(Event Player, Add(Player Variable(Event Player, playerFacingDir), Down), To World);
		Set Status(Event Player, Null, Rooted, 9999);
	}
}

rule("==TEST== Pharah Pointer ==")
